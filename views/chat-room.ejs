<% layout("/layouts/boilerplate") %>

<style>
    .chat-room {
    width: 80%;
    margin: 0 auto;
    padding: 20px;
    background-color: #f4f6f8;
    border-radius: 10px;
    margin-top: 20px;
}

.chat-room h2 {
    text-align: center;
    font-size: 1.8rem;
    margin-bottom: 20px;
}

.messages {
    max-height: 500px;
    overflow-y: auto;
    padding: 10px;
    border: 1px solid #ddd;
    background-color: #fff;
    border-radius: 8px;
    margin-bottom: 20px;
}

.message-container {
    display: flex;
    flex-direction: column;
    margin-bottom: 15px;
}

.user-message {
    align-self: flex-start;
    background-color: #d1e7dd;
    border-radius: 10px 0 10px 10px;
    padding: 10px;
    max-width: 60%;
}

.doctor-message {
    align-self: flex-end;
    background-color: #bee5eb;
    border-radius: 0 10px 10px 10px;
    padding: 10px;
    max-width: 60%;
}

.message-info {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    color: #666;
    margin-bottom: 5px;
}

.message-from {
    font-weight: bold;
}

.message-time {
    font-style: italic;
}

.message-text p {
    margin: 0;
}

.chat-form {
    display: flex;
    gap: 10px;
}

.chat-form input {
    width: 100%;
    resize: none;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
}

</style>

<section class="chat-room">
    <h2>Chat with Dr. "<%= doctorName %>"</h2>

    <div class="messages">
        <% messages.forEach(msg => { %>
            <div class="message-container <%= msg.sender.toString() === userId.toString() ? 'user-message' : 'doctor-message' %>">
                <div class="message-info">
                    <span class="message-from"><%= msg.sender.toString() === userId.toString() ? 'You' : 'Dr. ' + doctorName %></span>
                    <span class="message-time"><%= new Date(msg.date).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></span>
                </div>
                <div class="message-text">
                    <p><%= msg.message %></p>
                </div>
            </div>
        <% }) %>
    </div>

    <form class="chat-form" action="/chat/<%= doctorId %>" method="POST">
        <input type="text" name="message" placeholder="Type your message..." required>
        <button class="submit-btn" type="submit">Send</button>
    </form>
</section>