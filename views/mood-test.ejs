<% layout("/layouts/boilerplate") %>

<section class="mood-test-section">
    <div class="container">
        <h1 class="page-title">
            Mood Test 
            <button id="new-chat" class="new-chat-btn">New Chat!</button>
        </h1>
        <p class="intro-text">Take this quick mood test to understand your current emotional state. Ask the AI anything about your mood or well-being.</p>

        <!-- Chatbot Section -->
        <div class="chatbot-container">
            <div class="chat-window" id="chat-window">
                <!-- Chatbot conversation will appear here -->
            </div>
            <form id="chat-form">
                <div class="chat-input-container">
                    <input type="text" id="chat-input" name="message" placeholder="Type your message here..." />
                    <button id="chat-send" type="submit">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
/* Overall container styling */
.mood-test-section {
    font-family: Arial, sans-serif;
    color: #333;
}

.chatbot-container {
    margin-top: 40px;
    margin: auto;
    border: 1px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    background-color: #f9f9f9;
}

.chat-window {
    height: 350px;
    padding: 15px;
    overflow-y: auto;
    border-bottom: 1px solid #ddd;
    background-color: #fff;
}

.chat-message {
    margin-bottom: 10px;
    padding: 8px 12px;
    border-radius: 10px;
    max-width: 80%;
}

.user {
    background-color: #007aff;
    color: white;
    align-self: flex-end;
    border-radius: 10px 10px 0 10px;
}

.bot {
    background-color: #f1f1f1;
    color: #333;
    border-radius: 10px 10px 10px 0;
}

.chat-input-container {
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #f1f1f1;
}

.chat-input-container input {
    flex: 1;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 20px;
    outline: none;
    font-size: 1rem;
    transition: border-color 0.3s;
}

.chat-input-container input:focus {
    border-color: #007aff;
}

.chat-input-container button {
    padding: 10px 20px;
    margin-left: 10px;
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    font-size: 1.2rem;
    transition: background-color 0.3s;
}

.chat-input-container button:hover {
    background-color: #005bb5;
}

.send-icon {
    font-size: 1.2rem;
    vertical-align: middle;
}

.new-chat-btn {
    margin-left: 10px;
    padding: 5px 15px;
    background-color: #ff6b6b;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
}

.new-chat-btn:hover {
    background-color: #e55b5b;
}
</style>

<script>
document.getElementById('chat-form').addEventListener('submit', async (event) => {
    event.preventDefault();

    const userMessage = document.getElementById('chat-input').value;

    if (userMessage.trim() === '') return;

    const userHtml = `<div class="chat-message user"><strong>You:</strong> ${userMessage}</div>`;
    document.getElementById('chat-window').innerHTML += userHtml;
    document.getElementById('chat-input').value = '';

    const response = await fetch('/chat', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ message: userMessage })
    });

    const data = await response.json();
    const botHtml = `<div class="chat-message bot"><strong>AI:</strong> ${data.response}</div>`;
    document.getElementById('chat-window').innerHTML += botHtml;

    const chatWindow = document.getElementById('chat-window');
    chatWindow.scrollTop = chatWindow.scrollHeight;
});

document.getElementById('new-chat').addEventListener('click', async () => {
    // Clear chat UI
    document.getElementById('chat-window').innerHTML = '';

    // Send request to clear conversation history on the server
    await fetch('/chat/clear', { method: 'POST' });
});
</script>