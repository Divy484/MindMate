<% layout("/layouts/boilerplate") %>

<style>

    .container {
        margin-top: 15px;
    }

    .main-content {
        display: flex;
        gap: 20px;
    }

    .left-column {
        flex: 3;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .appointments {
        background: linear-gradient(-109deg, #007E85 0%, #008E95 33%, #006E75 34%, #007E85 39%, #008E95 100%);
        padding: 20px;
        border-radius: 10px;
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: space-between;
    }

    .appointments-content {
        flex: 4;
    }

    .appointments-image {
        flex: 1;
        text-align: right;
        display: flex;
        align-items: center;
    }

    .appointments-image img {
        width: 300px;
        height: 300px;
        border-radius: 12px;
    }

    .appointments::after {
        content: '';
        position: absolute;
        right: -50px;
        bottom: -50px;
        width: 200px;
        height: 200px;
        background-size: cover;
        background-position: center;
        opacity: 0.3;
        border-radius: 50%;
    }

    .patient-cards {
        display: flex;
        margin-top: 50px;
    }

    .patient-card {
        background-color: rgba(255, 255, 255, 0.55);
        border-radius: 10px;
        padding: 15px;
        width: 40%;
        text-align: left;
        font-weight: 500;
    }

    .patient-card h3 {
        margin: 0;
        font-size: 1em;
        font-weight: 500;
    }

    .patient-card h2 {
        margin: 10px 0 0;
        font-size: 2em;
        font-weight: 500;
        text-align: left;
    }

    .calendar {
        flex: 2;
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .patient-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .patient-initials {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        font-weight: bold;
    }

    .patient-time {
        margin-left: auto;
        padding: 5px 10px;
        border-radius: 15px;
    }

    .calendar table {
        width: 100%;
        border-collapse: collapse;
    }

    .calendar th,
    .calendar td {
        text-align: center;
        padding: 5px;
    }

    .calendar .highlight {
        color: red;
        font-weight: bold;
    }

    .upcoming {
        margin-top: 20px;
    }

    .upcoming-item {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .upcoming-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #4db6ac;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
    }
</style>

