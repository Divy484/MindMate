  <h2 class="section-title">Get In Touch</h2>
  <p class="section-subtitle">We want to share our location<br>to find us easily.</p>
  <div class="contact-info-container">
    <div class="contact-info-grid">
      <div class="contact-info-item">
        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/915b74087ea8f80ec5e39276351866f68cc07d75898d06b1f7e4494064c97fad?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136" alt="Office location icon" class="contact-icon">
        <div class="contact-details">
          <h3 class="contact-type">Office Address</h3>
          <p class="contact-value">74A High Road, Wanstead, London, E11 7RJ</p>
        </div>
      </div>
      <div class="contact-info-item">
        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/9ed7cd4dd666260e2120798e7132443f795f31949d04948c622715e9f330a38c?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136" alt="Telephone icon" class="contact-icon">
        <div class="contact-details">
          <h3 class="contact-type">Telephone number</h3>
          <p class="contact-value">078-4518-4100</p>
        </div>
      </div>
      <div class="contact-info-item">
        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/6b8c980cc7735dd41b4b9f5a3aa15e06a956ab4510f445a33ce6bfb045fd15ca?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136" alt="Email icon" class="contact-icon">
        <div class="contact-details">
          <h3 class="contact-type">Mail address</h3>
          <p class="contact-value">info@mindmate.com</p>
        </div>
      </div>
    </div>
  </div>
</section>