<% layout("/layouts/boilerplate") %>

<section class="hero">
    <div>
        <% if(!currUser) { %>
            <h1 class="display-4 fw-bold">Welcome to MindMate</h1>
        <% } %>
        <% if(currUser) { %>
            <h1 class="display-4 fw-bold">Welcome to MindMate, <%= username %></h1>
        <% } %>

        <p class="lead">Your journey to better mental health starts here.</p>

        <% if(!currUser) { %>
            <a href="/login" class="btn btn-lg btn-primary mt-3">Get Started</a>
        <% } %>
        <% if(currUser) { %>
            <a href="/appointment" class="btn btn-lg btn-primary mt-3">Get Started</a>
        <% } %>
    </div>
</section>

<!-- Quotes Section -->
<h2 class="quotes-title">Daily Inspiration</h2>
<section class="quotes-section">
    <div class="quote-container">
        <h3><q> <span class="quote-text"></span> </q></h3>
    </div>
</section>

<!-- Main Section -->
<section class="features py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-calendar-check fa-2x mb-3"></i>
                        <h5 class="card-title">Book an Appointment</h5>
                        <p class="card-text">Schedule a session with a certified counselor at your convenience.</p>
                        <a href="/appointment" class="btn btn-outline-primary">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-face-smile fa-2x mb-3"></i>
                        <h5 class="card-title">Mood Testing</h5>
                        <p class="card-text">Take a quick test to understand your current emotional state.</p>
                        <a href="/mood-test" class="btn btn-outline-primary">Take Test</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-quote-left fa-2x mb-3"></i>
                        <h5 class="card-title">Motivational Quotes</h5>
                        <p class="card-text">Get inspired with daily quotes and uplifting messages.</p>
                        <a href="/quotes" class="btn btn-outline-primary">Explore Quotes</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fa-solid fa-dumbbell fa-2x mb-3"></i>
                        <h5 class="card-title">Daily Exercise</h5>
                        <p class="card-text">Follow our daily exercise routines to keep your mind and body healthy.</p>
                        <a href="/exercise" class="btn btn-outline-primary">Start Exercise</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Therapist Section -->
<section class="counseling-services">
    <img src="/images/image 1.png" alt="Counseling services hero image" class="hero-image" />
    <div class="services-container">
        <div class="services-grid">
            <!-- Service Card 1 -->
            <article class="service-card">
                <h2 class="service-title">Direct Counseling</h2>
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/da34b5a15a573c985b337ed118a48cf15762e2eac3f0895c10f58224ee283909?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136"
                    alt="Direct counseling icon" class="service-icon" />
                <a href="/appointment" class="find-therapist-link">
                    <span class="find-therapist-text">Find therapist</span>
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/999007aa4db824a6365a3f3419f01db3ed09c515506db3d4ee4a5f29dabee4f7?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136"
                        alt="Arrow" class="arrow-icon" />
                </a>
            </article>
            <!-- Service Card 2 -->
            <article class="service-card">
                <h2 class="service-title">Advice By Phone</h2>
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/5a6f28a0ed2d9696974df27c81f07bf677441d103b950d48322d0d9913779a5a?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136"
                    alt="Phone counseling icon" class="service-icon" />
                <a href="/appointment" class="find-therapist-link">
                    <span class="find-therapist-text">Find therapist</span>
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/999007aa4db824a6365a3f3419f01db3ed09c515506db3d4ee4a5f29dabee4f7?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136"
                        alt="Arrow" class="arrow-icon" />
                </a>
            </article>
            <!-- Service Card 3 -->
            <article class="service-card">
                <h2 class="service-title">Online Counseling</h2>
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/b66a9a942c0cdd56454b3f2666f94ede635941eda68f67b59e0ac57baa4e2ad7?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136"
                    alt="Online counseling icon" class="service-icon" />
                <a href="/appointment" class="find-therapist-link">
                    <span class="find-therapist-text">Find therapist</span>
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/999007aa4db824a6365a3f3419f01db3ed09c515506db3d4ee4a5f29dabee4f7?placeholderIfAbsent=true&apiKey=f83eba3fcad646e1b9247f53a10d2136"
                        alt="Arrow" class="arrow-icon" />
                </a>
            </article>
        </div>
    </div>
</section>

